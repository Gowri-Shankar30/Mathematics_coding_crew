//User function Template for C++
class Solution
{
public:
    int oppositeFaceOfDice(int N)
    {
        // Write Your Code here
     int r=0;
     if(N==1)
     {
        r=6;
     }
     if(N==2)
     {
        r=5;
          }
     if(N==3)
     {
         r=4;
          }
     if(N==4)
     {
         r=3;
         }
     if(N==5)
     {
        r=2;
     }
     if(N==6)
     {
        r=1;
     }
     return(r);
    }
};
